<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.telephony" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RileyMest">

        <activity android:name=".Launcher"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".screens.ScreenLogin"
            android:exported="true"/>

        <activity android:name=".screens.ScreenSMS"
            android:exported="true" />

        <activity android:name=".screens.ScreenMain"
            android:exported="true"/>

        <activity android:name=".screens.ScreenAddItem"
            android:theme="@style/Theme.TransparentActivity"
            android:exported="true" />

        <activity android:name=".screens.ScreenSettings"
            android:exported="true" />

        <activity android:name=".screens.ScreenChangePassword"
            android:theme="@style/Theme.TransparentActivity"
            android:exported="true" />

    </application>

</manifest>