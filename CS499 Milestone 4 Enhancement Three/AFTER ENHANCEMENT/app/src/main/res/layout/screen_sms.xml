<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewBackgroundBox"
        android:layout_width="275dp"
        android:layout_height="375dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/light_grey" />

    <TextView
        android:id="@+id/textNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/sms_notifications"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/viewBackgroundBox"
        app:layout_constraintStart_toStartOf="@id/viewBackgroundBox"
        app:layout_constraintEnd_toEndOf="@id/viewBackgroundBox" />

    <Button
        android:id="@+id/buttonEnableSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonEnableSMS"
        android:text="@string/enable"
        app:layout_constraintTop_toTopOf="@id/viewBackgroundBox"
        app:layout_constraintBottom_toBottomOf="@id/viewBackgroundBox"
        app:layout_constraintStart_toStartOf="@id/viewBackgroundBox"
        app:layout_constraintEnd_toEndOf="@id/viewBackgroundBox"/>

    <Button
        android:id="@+id/buttonSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:onClick="buttonSkip"
        android:text="@string/skip"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@id/viewBackgroundBox"
        app:layout_constraintBottom_toBottomOf="@id/viewBackgroundBox" />

</androidx.constraintlayout.widget.ConstraintLayout>